#hidden {
  display: none;
}

/* 教程页 */
#title{
  height:100px;
  width: 300px;
}
#bg_image {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: no-repeat center center fixed;
  background-size: cover;
  background-image: url('http://yuan619.xyz/xy/game1_background1.png');
