  height: 100vh;
}
#text {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 20px;
  height: 400px;
  width: 300px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

#text image {
  height: 90%;
  width: 85%;
}

#begin {
  width: 110px;
  height: 100rpx;
  /* margin: 0 auto; */
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border: rgb(119, 64, 12) solid 3px;
  border-radius: 25rpx;
  background-color: rgb(236, 236, 198);
  color: rgb(119, 64, 12);
}
.button{
  /* width: 30%; */
  font-size: 48rpx;
  font-weight: 700;
  text-align: center;
}

/* 秘籍展示页 */
#textlab {
  display: flex;
  height: 300px;
  width: 400px;
  /* background-color: red; */
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 400px, 200px;
  justify-content: center;
  align-items: center;
  animation: shadow 1.5s linear infinite;
}

@keyframes shadow {

  0%,
  100% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.1);
  }
}

#number {
  width: 180px;
  height: 100px;
  font-size: 60rpx;
  color: red;
  display: flex;
  justify-content: center;
  align-items: center;
  transform-origin: bottom center;
  animation: shadow 1.5s linear infinite;
}

#start{
  display: flex;
  width: 170rpx;
  height: 80rpx;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 40rpx;
  color: black;
  background-color: white;
  border-radius: 15rpx;
}

@keyframes swing {
  10% {
    transform: rotate(15deg);
  }

  20% {
    transform: rotate(-10deg);
  }

  30% {
    transform: rotate(5deg);
  }

  40% {
    transform: rotate(-5deg);
  }

  50%,
  100% {
    transform: rotate(0deg);
  }
}

#timer{
  height: 100rpx;
  width: 750rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items:flex-start;
}

#timer view{
  margin-left: 30rpx;
  margin-top: 20rpx;
  height: 90rpx;
  width: 100px;
  display: flex;
  justify-content: center;
  align-items:center;
  font-size: 45rpx;
  border-radius: 15px;
  background-color: rgba(135, 206, 235, 0.9);
  color:white;
  font-weight: 700;
}

