page{
  height: 100vh;
}
.container{
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 60rpx 40rpx;
  overflow: auto;
  background-size: cover;
  background-repeat: no-repeat;
}
.s{
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  text-align: center;
  border: rgb(119, 64, 12) solid 6px;
  border-radius: 20rpx;
  background-color: rgb(236, 236, 198);
}
.container .item{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
  width: 90%;
  border-bottom: rgb(119, 64, 12) solid 1rpx;
}
.age{
  border-bottom: none !important;
}
.icon{
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}

/*  */
input{
  width: 50%;
  height: 55rpx;
  border: rgb(119, 64, 12) solid 2px;
  border-radius: 10rpx;
  text-align: start;
  margin-left: 30rpx;
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.radio_group{
  width: 50%;
  margin-left: 10rpx;
}
.radio{
  margin-right: 15rpx;
}
.commit{
  width: 10rpx;
  height: 100rpx;
  border: rgb(119, 64, 12) solid 2px;
  background-color: rgb(236, 236, 198);
  color: rgb(119, 64, 12);
  text-align: center;
  margin-top: 50rpx;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 下拉框 */
.select_box{
  width: 309rpx;
  margin-left: 30rpx;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 62rpx;
  border: 2px solid rgb(119, 64, 12);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
  text-align: start;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  /* border: 3px solid rgb(236, 236, 198); */
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: rgb(236, 236, 198);
  transition: height 0.3s;
  z-index: 999;
}
.option{
  display: block;
  line-height: 30rpx;
  font-size: 30rpx;
  border-left: 2px solid rgb(119, 64, 12) ! important;
  border-right: 2px solid rgb(119, 64, 12) ! important;
  border-bottom: 2px solid rgb(119, 64, 12) ! important;
  /* padding: 10rpx; */
  text-align: start;
}