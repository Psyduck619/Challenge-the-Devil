page{
  height: 100vh;
}
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  text-align: center;
  overflow: auto;
  background-size: cover;
  background-repeat: no-repeat;
}
.s{
  padding-left: 15%;
  width: 80%;
  /* height: 55%; */
  margin-top: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  text-align: center;
  border: rgb(119, 64, 12) solid 6px;
  border-radius: 20rpx;
  background-color: rgba(236, 236, 198, 1);
}
.s .sex{
  margin-bottom: 30rpx;
}
.s .name{
  margin-bottom: 30rpx;
}
text{
  display: block;
  font-size: 35rpx;
  line-height: 60rpx;
  font-weight: 700;
  text-align: left;
}
.name input{
  width: 300rpx;
  height: 60rpx;
  font-size: 35rpx;
  border: rgb(119, 64, 12) solid 2px;
  border-radius: 10rpx;
  text-align: start;
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.name .question{
  color: rgb(19, 19, 57);
  font-weight: 700;
  font-size: 36rpx;
}
.sex .radio_group{
  font-weight: 300;
  text-align: left;
}
.sex .radio{
  margin-right: 15rpx;
}
/* kid */
.kid{
  width: 35%;
  height: 40%;
  background-repeat: no-repeat;
  background-size: 600rpx;
  background-position-y: center;
  background-position-x: left;
  flex-direction: column;
  justify-content: center;
  margin: 15rpx auto;
  text-align: center;
}
/* button */
.start{
  width: 400rpx;
  height: 180rpx;
  margin: 80rpx auto;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  top: -30px;
}
.button{
  width: 30%;
  height: 120rpx;
  border: rgb(119, 64, 12) solid 4px;
  border-radius: 20rpx;
  background-color: rgb(236, 236, 198);
  color: rgb(119, 64, 12);
  font-size: 42rpx;
  font-weight: 700;
  text-align: center;
  padding: 5rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 下拉框 */
.select_box{
  width: 318rpx;
  margin: 0rpx auto;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 68rpx;
  border: 2px solid rgb(119, 64, 12);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
  text-align: start;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: rgb(236, 236, 198);
  transition: height 0.3s;
  z-index: 999;
}
.option{
  display: block;
  line-height: 30rpx;
  font-size: 30rpx;
  border-left: 2px solid rgb(119, 64, 12) ! important;
  border-right: 2px solid rgb(119, 64, 12) ! important;
  border-bottom: 2px solid rgb(119, 64, 12) ! important;
  padding: 10rpx;
  text-align: start;
}