.background {
  width: 750rpx;
  height: 100%;
  position: fixed;
  /* background-size:100% 100%; */
  z-index: -1;
}

.name {
  margin: 0 auto;
  color: #ff8500;
  height: 300rpx;
  text-align: center;
  line-height: 300rpx;
  width: 600rpx;
  font-size: 30px;
  font-weight: bold;
  background-repeat: no-repeat;
  background-size: 100%;
}

.time {
  color: #7DE346;
  margin-top: 50rpx;
}

.pos {
  position: fixed;
  top: 180rpx;
  left: 0;
}

.avator {
  width: 260rpx;
}

.content {
  margin: 320rpx auto 0;
  width: 600rpx;
  text-align: center;
  align-items: center;
  flex-direction: column;
  display: flex;
}

.item {
  width: 500rpx;
  height: 180rpx;
  line-height: 180rpx;
  color: red;
  font-size: 40px;
  font-weight: 800;
  background-repeat: no-repeat;
  background-size: auto 100%;
}

.timer {
  font-size: 70px;
  font-weight: 700;
  position: fixed;
  top: 160rpx;
  right:100rpx;
  color: #001140;
  animation: swing 1s .15s linear infinite;
}
.per{
  position: fixed;
  bottom: 50rpx;
  left: 10%;
  width: 80%;
  height: 20rpx;
}

@keyframes swing {
  10% {
    transform: rotate(20deg);
  }

  20% {
    transform: rotate(-15deg);
  }

  30% {
    transform: rotate(10deg);
  }

  40% {
    transform: rotate(-10deg);
  }

  50%,
  100% {
    transform: rotate(0deg);
  }
}