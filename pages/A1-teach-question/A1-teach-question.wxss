.background {
  width: 750rpx;
  height: 100%;
  position: fixed;
  /* background-size:100% 100%; */
  z-index: -1;
}

.name {
  margin: 0 auto;
  color: #333;
  height: 300rpx;
  text-align: center;
  padding: 120rpx 44rpx 0;
  width: 600rpx;
  font-size: 24px;
  font-weight: bold;
  background-repeat: no-repeat;
  background-size: 100%;
}

.time {
  color: #7DE346;
  margin-top: 50rpx;
}

.pos {
  position: fixed;
  top: 180rpx;
  left: 0;
}

.avator {
  width: 260rpx;
}

.content {
  margin: 320rpx auto 0;
  width: 600rpx;
  text-align: center;
  align-items: center;
  flex-direction: column;
  display: flex;
}

.item {
  width: 500rpx;
  height: 180rpx;
  line-height: 180rpx;
  color: red;
  font-size: 40px;
  font-weight: 800;
  background-repeat: no-repeat;
  background-size: auto 100%;
}

.timer {
  font-size: 70px;
  font-weight: 700;
  position: fixed;
  top: 160rpx;
  right: 100rpx;
  color: #001140;
  animation: swing 1s .15s linear infinite;
}

@keyframes swing {
  10% {
    transform: rotate(20deg);
  }

  20% {
    transform: rotate(-15deg);
  }

  30% {
    transform: rotate(10deg);
  }

  40% {
    transform: rotate(-10deg);
  }

  50%,
  100% {
    transform: rotate(0deg);
  }
}
.per{
  position: fixed;
  bottom: 50rpx;
  left: 10%;
  width: 80%;
  height: 20rpx;
}
.begin {
  margin: 260rpx auto 0;
  height: 100rpx;
  width: 200rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border: rgb(119, 64, 12) solid 3px;
  border-radius: 25rpx;
  background-color: rgb(236, 236, 198);
  color: rgb(119, 64, 12);
}.button{
  /* width: 30%; */
  font-size: 48rpx;
  font-weight: 700;
  text-align: center;
}
.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0);
  /*设置阴影半透明背景如： background: rgba(0, 0, 0, 0.4);*/
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 400rpx;
  height: 200rpx;
  margin-left: 175rpx;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  /* box-shadow: 0px 3px 3px 2px gainsboro; */
  border: rgb(119, 64, 12) solid 3px;
  border-radius: 25rpx;
  background-color: rgb(236, 236, 198);
  color: rgb(119, 64, 12);
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

.zan-text {
  font-size: 48rpx;
  font-weight: 700;
  font-size: large;
  padding-top: 70rpx;
  text-align: center;
  align-items: center;
}