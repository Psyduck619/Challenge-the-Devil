page{
  height: 100vh;
}
.container{
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
  text-align: center;
  margin: 0 auto;
  align-items: center;
  overflow: auto;
  background-size: cover;
  background-repeat: no-repeat;
}
text{
  display: block;
}
.title{
  width: 60%;
  height: 35%;
  background-repeat: no-repeat;
  background-size: 430rpx;
  background-position-y: center;
  background-position-x: left;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.top{
  width: 98%;
  height: 390rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin: 20rpx auto;
  margin-bottom: 0;
  border: rgb(119, 64, 12) solid 4px;
  border-radius: 20rpx;
  background-color: rgb(236, 236, 198);
  border-radius: 10rpx;
}
.kid{
  width: 37%;
  height: 100%;
  background-repeat: no-repeat;
  background-size: 630rpx;
  background-position-y: center;
  background-position-x: left;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.score{
  font-size: 30rpx;
  color: #333333;
}
.game{
  width: 70%;
  height: 110rpx;
  font-size: 40rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  border: rgb(119, 64, 12) solid 4px;
  border-radius: 20rpx;
  background-color: rgb(236, 236, 198);
  border-radius: 100rpx;
}
.next{
  width: 40%;
  margin-top: 20rpx;
  height: 140rpx;
  background-position: 0rpx -205rpx;
  color: black;
  border-radius: 20rpx;
  box-shadow: -1px 2px 4px 3px rgb(148, 198, 98);
}