page{
  height: 100vh;
}
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  text-align: center;
  background-size: cover;
  background-repeat: no-repeat;
}
.block{
  width: 80%;
  height: 180rpx;
  background-color: rgb(236, 236, 198);
  border: rgb(119, 64, 12) 3px solid;
  border-radius: 20rpx;
  margin: 30rpx 0 10rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
