.block .title{
  font-weight: 700;
  color: rgb(19, 19, 57);
}
.block .game{
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: relative;
  bottom: 10rpx;
}
.block .button{
  width: 36%;
  height: 70rpx;
  font-size: 28rpx;
  box-shadow: -1px 2px 4px 3px rgb(148, 198, 98);
  border: rgb(119, 64, 12) solid 2px;
  border-radius: 50rpx;
  background-color: rgb(236, 236, 198);
  color: rgb(119, 64, 12);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}
.block .text{
  font-weight: 700;
}