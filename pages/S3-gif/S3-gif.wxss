#bg_image {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: no-repeat center center fixed;
  background-size: cover;
  width: 100vw;
  height: 100vh;
}
#title{
  height:100px;
  width: 300px;
}
#text {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 20px;
  height: 400px;
  width: 300px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

#text image {
  height: 90%;
  width: 85%;
}

#begin {
  width: 100px;
  height: 100rpx;
  /* margin: 0 auto; */
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border: rgb(119, 64, 12) solid 3px;
  border-radius: 25rpx;
  background-color: rgb(236, 236, 198);
  color: rgb(119, 64, 12);
  font-size: 48rpx;
  font-weight: 700;
}

