/* pages/index/test/test.wxss */

.background {
    width: 750rpx;
    height: 100%;
    position: fixed;
    /* background-size:100% 100%; */
    z-index: -1;
}

.title {
    display: flex;
    padding-top: 70rpx;
    text-align: center;
}
.right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 600rpx;
    height: 300rpx;
    text-align: center;
    color: #333;
    font-size: 40rpx;
    font-weight: bold;
    background-repeat: no-repeat;
    background-size: 100%;
    padding: 120rpx 65rpx 0;
}

.pos {
    margin-top: 100rpx;
    width: 140rpx;
}

.avator {
    width: 140rpx;
}

.row {
    border-bottom: 4rpx black solid;
    display: flex;
}

.content {
    margin-top: 70rpx;
    position: absolute;
    padding: 3vw 1vw 0 1vw;
    width: 100vw;
    height: 110vw;
    box-sizing: border-box;
    border-radius: 10px;
}

/* 8*6样式  150*80 */
/* 10*8样式  112.5*64  */
.cell {
    width: 115rpx;
    height: 64rpx;
}

.cell_con {
    flex: 1;
    font-size: 20px;
    text-align: center;
    line-height: 80rpx;
}

