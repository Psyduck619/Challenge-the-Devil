page{
  height: 100vh;
}
.container{
  width: 100%;
  height: 100%;
  padding: 15rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: auto;
  background-size: cover;
  background-repeat: no-repeat;
}
.container .person{
  width: 100%;
  height: 400rpx;
}
.container .btn{
  width: 65%;
  height: 80rpx;
  text-align: center;
  margin: 0 auto;
  border: rgb(148, 198, 104) solid 4px;
  background-color: rgb(148, 198, 104);
  color: rgb(255, 255, 255);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .userinfo{
  width: 80%;
  height: 180rpx;
  padding: 50rpx;
  background-color: rgb(236, 236, 198);
  margin-bottom: 10rpx;
  border: rgb(119, 64, 12) solid 2px;
  border-radius: 20rpx;
}
.container .userinfo .content{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.container .userinfo image{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  position: relative;
  bottom: 20rpx;
}