  z-index: -1;
}
#textlab text{
  font-size:50rpx;
  font-weight: 600;
  color:white;
  /* margin-top: 20%; */
  /* background-color: red; */
  display:flex;
align-items:center;
justify-content:center;
  width: 75%;
}

#textlab-bottom{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
#elf{
  width: 50%;
  height: 100%;
}
#number {
  /* background-color: red; */
  width: 100px;
  height: 200px;
  display: flex;
  justify-content: center;
  align-items: center;
  transform-origin: bottom center;
  animation: swing 1s .15s linear infinite;
}

#number image {
  height: 80%;
  width: 80%;
}

@keyframes swing {
  10% {
    transform: rotate(15deg);
  }

  20% {
    transform: rotate(-10deg);
  }

  30% {
    transform: rotate(5deg);
  }

  40% {
    transform: rotate(-5deg);
  }

  50%,
  100% {
    transform: rotate(0deg);
  }
}

