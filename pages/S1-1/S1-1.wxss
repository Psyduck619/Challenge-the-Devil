  width: 84px;
  height: 84px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #391531;
  border-radius: 84px;
}

.progress_bg {
  position: absolute;
  width: 84px;
  height: 84px;
}

.progress_canvas {
  width: 84px;
  height: 84px;
}

#title{
