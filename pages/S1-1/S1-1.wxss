page {
  height: 100vh;
}

#bg_image {
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

#bg-image {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: -1;
}

#progress_box {
