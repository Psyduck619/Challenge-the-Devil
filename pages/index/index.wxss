page{
  height: 100vh;
}
.container{
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: flex-start;
  margin: 0 auto;
  text-align: center;
  overflow: auto;
  background-size: cover;
  background-repeat: no-repeat;
}
.head{
  width: 100%;
  position: relative;
  top: 10rpx;
  visibility: hidden;
}
.head .sound-icon{
  position: relative;
  left: 300rpx;
  width: 70rpx;
  height: 70rpx;
  overflow: auto;
  background-size: cover;
  background-repeat: no-repeat;
  /* -70为关 */
  background-position: 0rpx 0; 
}
.title{
  width: 100%;
  height: 400rpx;
  background-repeat: no-repeat;
  background-size: 750rpx;
  background-position-y: center;
  background-position-x: center;
  flex-direction: column;
  justify-content: center;
  margin: 30rpx auto;
  text-align: center;
}
/* .title .text2{
  font-size: 100rpx;
} */
.start{
  width: 75% !important;
  height: 160rpx;
  margin: 200rpx auto;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.button{
  width: 70% !important;
  border: rgb(119, 64, 12) solid 4px;
  border-radius: 25rpx;
  background-color: rgb(236, 236, 198);
  /* background-color: rgb(236, 200, 198); */
  color: rgb(119, 64, 12);
  font-size: 60rpx;
  font-weight: 700;
  text-align: center;
}