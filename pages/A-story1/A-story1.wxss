page {
  height: 100vh;
}
#main {
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
#bg-image {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: -1;
}
#title{
  height:100px;
  width: 300px;
}
#text {
  /* background: rgba(255, 255, 255, 0.5); */
  border-radius: 20px;
  height: 250px;
  width: 300px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;

}
#paper{
  height: 50%;
  width:100%;
  position:absolute;
  z-index: -1;
}
#font{
  /* background-color: red; */
  width: 95%;
  
}
#font text{
  font-size:35rpx;
  font-weight: 600;
  color:#08142a
}
#hiden {
  display: none;
}



#begin {
  width: 100px;
  height: 100rpx;
  /* margin: 0 auto; */
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border: rgb(119, 64, 12) solid 3px;
  border-radius: 25rpx;
  background-color: rgb(236, 236, 198);
  color: rgb(119, 64, 12);
}
.button{
  /* width: 30%; */
  font-size: 48rpx;
  font-weight: 700;
  text-align: center;
}
.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0);
  /*设置阴影半透明背景如： background: rgba(0, 0, 0, 0.4);*/
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 400rpx;
  height: 200rpx;
  margin-left: 175rpx;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  /* box-shadow: 0px 3px 3px 2px gainsboro; */
  border: rgb(119, 64, 12) solid 3px;
  border-radius: 25rpx;
  background-color: rgb(236, 236, 198);
  color: rgb(119, 64, 12);
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

.zan-text {
  font-size: 48rpx;
  font-weight: 700;
  font-size: large;
  padding-top: 50rpx;
  text-align: center;
  align-items: center;
}