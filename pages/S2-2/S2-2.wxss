  justify-content: center;
}

#awardimg {
  height: 100px;
  width: 90px;
  display: flex;
}

#awardimg image {
  height: 100%;
  width: 100%;
}

.ansright view {
  width: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
  font-size: 45rpx;
  color: red;
}

#showtime {
  margin-top: 30px;
  font-size: 45rpx;
  color: antiquewhite;
}

#next {
  display: flex;
  width: 180rpx;
  height: 80rpx;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 40rpx;
  color: black;
  background-color: white;
  border-radius: 15rpx;
  border: solid black 1px;
